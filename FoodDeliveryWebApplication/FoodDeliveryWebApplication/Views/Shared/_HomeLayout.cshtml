<!DOCTYPE html>

<html style="scroll-behavior:smooth">
<head>
    <meta name="viewport" content="width=device-width, initaial-scale=1.0" />
    <title>Food on wheels</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/fontawesome.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/Logos/AppLogo.png" type="image/gif" sizes="16x16">


</head>
<body >
    <div class="row shadow bg-light" style="position:fixed;width:100%;z-index:1">
        <div class="col-md-6 col-8">
            <div class="row ">
                <div class="col-md-3 col-3">
                    <img src="~/Content/Logos/AppLogo.png" class="img-fluid ms-4" style="height:auto;width:120px" />
                </div>
                <div class="col-md-9 col-9 my-auto ">

                    <img src="~/Content/Logos/AppName.png" class="img-fluid" style="height:80px;width:auto" />


                </div>

            </div>



        </div>
        <div class="col-md-6 col-4 my-auto ms-auto">
            <nav class="navbar navbar-expand-lg bg-light ">
                <div class="container-fluid">

                    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav  mb-2 mb-lg-0 ms-auto">
                            <li class="nav-item fs-3 me-4 ">
                                <a class="nav-link active " aria-current="page" href="#home-section">Home</a>
                            </li>
                            <li class="nav-item fs-3 me-4 ">
                                <a class="nav-link " href="#about-section">About</a>
                            </li>
                            <li class="nav-item fs-3 ">
                                <a class="nav-link " href="#contact-section">Contact</a>
                            </li>

                        </ul>
                        @*<form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="submit">Search</button>
                            </form>*@
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @RenderSection("scripts", required: false)
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>

    <script src="~/Scripts/fontawesome/fontawesome.min.js"></script>
</body>
</html>
