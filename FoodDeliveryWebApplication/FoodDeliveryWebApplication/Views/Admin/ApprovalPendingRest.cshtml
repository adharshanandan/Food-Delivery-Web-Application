@model IEnumerable<FoodDeliveryWebApplication.Models.Restaurant>

@{
    ViewBag.Title = "ApprovalPendingRest";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section style="padding-top:10em">
    <div class="container">
        <h2 class="mt-3">Restaurant Pending Approvals</h2>
        <hr class="mb-5" />
        <table class="table table-hover">
            

            <tr class="table-secondary">

                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailId)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.RestState)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.RestArea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RestTradeLicense)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RestPhone)
                </th>


                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailId)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.RestState)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.RestArea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RestTradeLicense)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RestPhone)
                    </td>

                    <td>
                        
                        <button type="submit" class="btn btn-primary btnApprove" onclick="location.href='@Url.Action("ApprovalPendingRest", "Admin",new {id= @item.Id })'" >Approve</button>

                    </td>
                </tr>

            }

        </table>
       
        <div class="text-center" style="display:none" id="msg">
            <p>@ViewBag.msg</p>

        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#msg").fadeOut(5000);
    })

</script>