@model IEnumerable<FoodDeliveryWebApplication.Models.ContactUs>

@{
    ViewBag.Title = "DisplayContactUsList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section style="padding-top:10em">
    <div class="container">
        <h2 class="mt-3">Contact us list</h2>
        <hr class="mb-5" />
        <table class="table table-hover">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ContId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ContId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ContId })
                    </td>*@
                </tr>
            }

        </table>
        </div>
    </section>
