@model FoodDeliveryWebApplication.Models.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section style="padding-top: 10em">

    <div class="container">
        <div class="card mx-auto p-2 col-md-6 col-12 bg-light mt-5">
            <div class="card-body ">

                <h3>Add Category</h3>


                @using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">
             
                <hr />

                @Html.Hidden("CatId")
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mb-3 mt-3">
                    @Html.LabelFor(model => model.CatName, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.CatName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CatName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3 mt-3">
                    @Html.LabelFor(model => model.CatImgUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.CatImgUrl, new { @class = "form-control", type = "file" })
                        @Html.ValidationMessageFor(model => model.CatImgUrl, "", new { @class = "text-danger" })
                    </div>
                </div>
                @if (@ViewBag.Failed != null)
                {
                    <label id="failmsg" class="alert alert-danger text-center mx-auto">@ViewBag.Failed</label>
                    
                    
                }
                @if (@ViewBag.Success != null)
                {
                    <label id="okMsg" class="alert alert-success text-center mx-auto">@ViewBag.Success</label>
                    
                }




                <div class="row form-group text-center mb-3">
                    <div class="mx-auto">
                        <input type="submit" value="Add" class="btn btn-success" />
                        <input type="button" value="Back to list" id="Clear" class="btn btn-danger" onclick="location.href='@Url.Action("CategoryList", "Admin")'" />
                    </div>

                </div>
            </div>
                }

          
            </div>
        </div>
    </div>
    </section>

