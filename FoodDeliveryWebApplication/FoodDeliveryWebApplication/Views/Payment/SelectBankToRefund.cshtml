@model FoodDeliveryWebApplication.Models.BankAccounts

@{
    ViewBag.Title = "SelectBankToRefund";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}




<section style="padding-top:10em">
    <div class="container">
        <div class="card w-50 bg-light mt-5 mx-auto">
            <div class="card-body">


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Select Your Bank Account</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group mt-5">

                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.AccId, TempData["ddlUserBankList"] as List<SelectListItem>, new { htmlAttributes = new { @class = "form-control", @id = "AccId" } })
                                @Html.ValidationMessageFor(model => model.AccId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div id="makePayment" style="display:none">

                            <div class="form-group mt-5">
                                <div class="col-md-offset-2 col-md-10">


                                    <p> <button type="button" class="btn btn-primary " id="btnSubmit"><i class="fas fa-mobile-alt mr-2"></i> Submit</button> </p>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#AccId").change(function(){
            var selIndex = $("#AccId").val();
            if (selIndex != 0) {
                $("#makePayment").show();

            }
            else {
                $("#makePayment").hide();
            }
        })
    })

    $("#btnSubmit").click(function () {

        var accId = $("#AccId").val();

        $.ajax({
            url: "/Customer/CancelOrders/",
            method: "POST",
            data: { "accId": accId },
            success: function (result) {
                if (result == "Refunded") {
                    alert("Order has been cancelled successfully and refunded the amount");

                    location.href = "/Customer/ActiveOrders";
                }

                else {
                    alert(result);
                }

            },
            error: function (err) {
                alert(err);
            }
        })
    })
        
   
</script>
