@model IEnumerable<FoodDeliveryWebApplication.Models.BankAccounts>

@{
    ViewBag.Title = "UserBankAccounts";
    if (Session["Customer"] == null)
    {
        Layout = "~/Views/Shared/_RestaurantLayout.cshtml";

    }
    else
    {
        Layout = "~/Views/Shared/_CustomerLayout.cshtml";

    }
}
<section style="padding-top:10em">
    <div class="container">

        <h2>UserBankAccounts</h2>

        <p>
            @Html.ActionLink("Add Bank", "AddBankDetails")
        </p>
        <table class="table table-hover">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(model => model.BankName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IfscCode)
                </th>


                <th></th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IfscCode)
            </td>

            <td>
                @Html.ActionLink("Edit", "AddBankDetails", new { id = item.AccId }) |

                @Html.ActionLink("Delete", "DeleteBankAcc", new { id = item.AccId })
            </td>
        </tr>
            }

        </table>
        </div>
    </section>
