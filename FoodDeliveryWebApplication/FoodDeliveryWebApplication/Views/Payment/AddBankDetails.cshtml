@model FoodDeliveryWebApplication.Models.BankAccounts

@{
    ViewBag.Title = "AddBankDetails";
    if (Session["Customer"] == null)
    {
        Layout = "~/Views/Shared/_RestaurantLayout.cshtml";

    }
    else
    {
        Layout = "~/Views/Shared/_CustomerLayout.cshtml";

    }
}
<section style="padding-top:10em">
    <div class="container">
        <div class="card w-50 mx-auto">
            <div class="card-body">


                <h2 class=" text-center">Add Bank</h2>
                <hr class="mb-5" />


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.fk_BankName, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.fk_BankName, TempData["ddlBankList"] as List<SelectListItem>, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.fk_BankName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Branch, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Branch, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Branch, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.AccNumber, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.AccNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AccNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.IfscCode, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.IfscCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IfscCode, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model=>model.AccId)

                <div class="row form-group text-center mb-3 mt-3">
                    <div class="mx-auto">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <input type="button" value="Cancel" id="Clear" class="btn btn-danger" />
                    </div>

                </div>
            </div>
                }



            </div>

    </div>
    </div>
</section>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
